<!DOCTYPE html>
<html>
<head>
<title>Bromer Movie Player</title>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        
    })
</script>
<style>
    body {
        background-color: #00BAE8;
    }

    .movies {
        background-color: #770CE8;
        padding-top: 5px;
        border-radius: 5px;
        display: inline-block;
    }

    a {
        color: #FFFFFF;
        font-family: monospace;
    }

    #player {
        width: 100%;
        text-align: center;
    }

    #vid {
        margin: auto;
        min-width: 640px;
        min-height: 480px;
    }

    ul {
        text-align: left;
        list-style-type: none;
    }

</style>
</head>
<body>
    <div id="player">
        <!--
        <video id="vid" controls>
            <source id="play_this" type="video/mp4">
        </video>
        -->
        <ul class="movies">
        <% for(i = 0; i < movies.length; i++) {%>
            <li> <div class="movie"><a href=<%="/Movies/" + i.toString()%> <p> <%= movies[i].substring(movies[i].lastIndexOf('/')+1) %></p></div> </li>
        <% } %>
        </ul>
    </div>
</body>
</html>